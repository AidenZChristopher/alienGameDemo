<Level>
    <!-- Textures must be at root level for your parser -->
    <Texture file="assets/character.bmp" key="player_texture" />
    <Texture file="assets/enemy.bmp" key="enemy_texture" />
    <Texture file="assets/background.bmp" key="background_texture" />
    <Texture file="assets/tileset.bmp" key="tile_texture" />

    <!-- Tiling Background -->
    <GameObject type="tiling_background">
        <TilingBackgroundComponent textureKey="background_texture" scrollSpeedX="0" scrollSpeedY="0" />
    </GameObject>

    <!-- Player with 12-frame animation -->
    <GameObject type="player">
        <BodyComponent x="100" y="400" width="35" height="80" />
        <SpriteComponent textureKey="player_texture" spriteSheet="true" frameWidth="150" frameHeight="131" totalFrames="12" frameRate="12" />
        <ControllerComponent />
    </GameObject>

    <!-- Platform 1 - Single stretched platform (256px wide) -->
    <GameObject type="platform">
        <BodyComponent x="0" y="500" width="272" height="16" />
        <SpriteComponent textureKey="tile_texture" tileX="2" tileY="3" tileWidth="16" tileHeight="16" />
        <SolidComponent />
    </GameObject>

    <!-- Platform 2 - Single stretched platform (400px wide) -->
    <GameObject type="platform">
        <BodyComponent x="600" y="500" width="400" height="16" />
        <SpriteComponent textureKey="tile_texture" tileX="4" tileY="3" tileWidth="16" tileHeight="16" />
        <SolidComponent />
    </GameObject>

    <!-- Moving Platform - Single stretched platform (144px wide) -->
    <GameObject type="moving_platform">
        <BodyComponent x="1250" y="450" width="144" height="16" />
        <SpriteComponent textureKey="tile_texture" tileX="4" tileY="3" tileWidth="16" tileHeight="16" />
        <HorizontalMoveBehaviorComponent left="1050" right="1450" speed="75" />
        <SolidComponent />
    </GameObject>

    <!-- Platform 3 - Single stretched platform (500px wide) -->
    <GameObject type="platform">
        <BodyComponent x="1500" y="500" width="500" height="16" />
