        <SolidComponent />
    </GameObject>

    <!-- Platform 5 - Single stretched platform (1000px wide) -->
    <GameObject type="platform">
        <BodyComponent x="2600" y="500" width="1000" height="16" />
        <SpriteComponent textureKey="tile_texture" tileX="3" tileY="3" tileWidth="16" tileHeight="16" />
        <SolidComponent />
    </GameObject>

    <!-- Patrolling Enemy -->
    <GameObject type="enemy">
        <BodyComponent x="1600" y="442" width="83" height="64" />
        <SpriteComponent textureKey="enemy_texture" spriteSheet="true" frameWidth="83" frameHeight="64" totalFrames="8" frameRate="8" />
        <PatrolBehaviorComponent left="1575" right="1950" speed="100" />
        <EnemyComponent />
    </GameObject>

    <!-- Flying Enemies -->
    <GameObject type="flying_enemy">
        <BodyComponent x="2750" y="330" width="83" height="64" />
        <SpriteComponent textureKey="enemy_texture" spriteSheet="true" frameWidth="83" frameHeight="64" totalFrames="8" frameRate="10" />
        <BounceBehaviorComponent amplitude="80" frequency="2.2" />
        <EnemyComponent />
    </GameObject>

    <GameObject type="flying_enemy">
        <BodyComponent x="2850" y="340" width="83" height="64" />
        <SpriteComponent textureKey="enemy_texture" spriteSheet="true" frameWidth="83" frameHeight="64" totalFrames="8" frameRate="10" />
        <BounceBehaviorComponent amplitude="100" frequency="1.5" />
        <EnemyComponent />
    </GameObject>

    <GameObject type="flying_enemy">
